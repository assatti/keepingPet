Algoritmo keepingPet
	
 Definir mascotas Como cadena                                                                // almacenar los datos de las mascotas
 Dimension mascotas[5]; 
 Dimension mascotasNombres[5];
 Dimension mascotasMedicacion[5];
 Dimension mascotasEstudiosComplementarios[5];
 Dimension mascotasDiasInternado[5];
 Dimension mascotasDatosComplementarios[5];
 
 Definir totalMascotas Como Entero                                                    // Vcontador de  mascotas registradas
	totalMascotas <- 0
 Definir opc Como Entero                                                             // opciones del menu
	
 Repetir 
	 Escribir "-----> MENU DE OPCIONES-----"                                                                  //menu
	 Escribir " -----> En este momento hay " , totalMascotas, " internadas.<-----"
	 Escribir "1. Registrar una mascota"
	 Escribir "2. Consultar datos de una mascota"
	 Escribir "3. Modificar datos de una mascota"
	 Escribir "4. Dar de alta una mascota"
	 Escribir "5. Salir"
	 Escribir "Elija una opción:"
	 Leer opc
	
      Segun opc Hacer
		 1:
			 Si totalMascotas < 5 Entonces                                                        // registro mascotas nuevas
				 
				 Escribir "Ingrese el nombre de la mascota:"
				 Leer mascotasNombres[5];
				 
				 Escribir "Ingrese la medicación que toma:"
				 Leer mascotasMedicacion[5];
				 
				 Escribir "Especifique si se realizarán estudios complementarios"
				 Leer mascotasEstudiosComplementarios[5];
				 
				 Escribir"Ingrese la cantidad de días que estará internada:"
				 Leer mascotasDiasInternado[5];
				 
				 Escribir "Ingrese datos complementarios"
				 Leer mascotasDatosComplementarios[5];

                                  totalMascotas=totalMascotas+1
				 
				 Escribir "-----> SE REGISTRO CORRECTAMENTE  <-----"
			 SiNo
				 Escribir "No hay lugares disponibles para internación."              // sin lugar libre
			 Fin Si
		 2:
			 Escribir "Ingrese el nombre de la mascota para consultar los datos:"              // ingresar consulta
			 Leer nombreConsulta
			 
			 Encontrado<-Falso
			si nombreConsulta= mascotasNombres[5]
			 
				Para i = 1 hasta totalMascotas hacer                                           //escribe datos consultados
				  Escribir "-----> Datos de ", nombreConsulta, " <-----"
			      Escribir "Nombre:", mascotasNombres[5];
			      Escribir "Medicacion: " , mascotasMedicacion[5];
			      Escribir "Estudios Complementarios: " , mascotasEstudiosComplementarios[5];
			      Escribir "Dias que estara internada: ", mascotasDiasInternado[5];
			      Escribir "Datos Complementarios: " , mascotasDatosComplementarios[5];
			      Encontrado <- Verdadero  // fin del bucle 
				    
			    FinPara
		    SiNo
			  Escribir "El nombre de la mascota no coincide con ninguna del registro"                  //negativa a consulta
			FinSi
			
		 3:
			 Escribir "Ingrese el nombre de la mascota para modificar datos:"                        // ingresar modificacion de datos
			 leer nombreModificacion
			 Encontrado <- Falso
			 si nombreModificacion= mascotasNombres[5]
				 Para i = 1 hasta totalMascotas hacer
					 Escribir "-----> Modificación de datos de ", nombreModificar, " <-----"
					 Escribir "1. Modificar medicación"
					 Escribir "2. Modificar estudios complementarios"
					 Escribir "3. Modificar días internacion"
					 Escribir "4. Modificar datos complementarios"
					 Escribir "5. Salir del menu"
					 Escribir "Elija una opción:"
					 Leer opcionModificacion
					 
					 segun opcionModificacion hacer                                                       // espacio de modificaciones
						 1:Escribir "Ingrese la nueva medicación:"
							 Leer mascotasMedicacion[5]
						 2: Escribir "Ingrese la modificacion de los estudios complementarios"
							 Leer mascotasEstudiosComplementarios[5]
						 3: Escribir "Ingrese las modificaciones sobre los dias de internacion"
							 leer mascotasDiasInternado[5]
						 4: Escribir "Ingrese las modificaciones de los datos complementarios"
							 Leer mascotasDatosComplementarios[5]
						 5: Escribir "Salio del menu de modificaciones"
							
						De Otro Modo:
							Escribir " No se eligio ninguna opcion valida para modificar"
							
						 Encontrado<- Verdadero 	
					    FinSegun
					FinPara
				sino escribir " El nombre de la mascota no coincide con ninguna del registro "	
				
			 FinSi
	     4:
			 Escribir "Ingrese el nombre de la mascota que se esta dando de alta"                         // dar alta (disminuir el total de mascotas para permitir seguir registrando)
			 leer mascotaAlta
			 Encontrado<- Falso
			   si  mascotaAlta = mascotasNombres[5]
				  
				   Escribir " Se dio de alta a :" , mascotaAlta	
				   mascotasDatosComplementarios[5]<- " La mascota fue dada de alta"
				   totalMascotas= totalMascotas-1
				   encontrado<- verdadero 
				   
			   FinSi
			 
			   
		   5: Escribir "Fin del menu, Muchas gracias"
			   
		 De Otro Modo:
			 Escribir "No eligio ninguna de las opciones validas"                      
	   Fin Segun
	 
	 
    hasta Que opc=5                                                                                    //salidas de menu
	
	
FinAlgoritmo
